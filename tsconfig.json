{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "outDir": "./",
    "resolveJsonModule": true
  },
  "include": ["src", "packages"],
  "exclude": ["node_modules"]
}
